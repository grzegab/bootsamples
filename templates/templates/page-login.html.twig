{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="jumbotron jumbotron-fluid my-0 pt-3 vh-100 bg">
        <div class="container rounded">
            <div class="row mt-5 py-5">
                <div class="col-12 col-sm-8 col-md-6 col-lg-4 offset-sm-2 offset-md-3 offset-lg-4">
                    <h1 class="my-3 text-center">Please log in</h1>
                    <form class="mb-3">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control shadow-md" placeholder="example@email.com" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control shadow-lg" id="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block shadow-md rounded mt-4">Login</button>
                    </form>
                    <div class="text-center">
                        <p>or ...</p>
                        <a href="#" class="btn btn-success btn-block mb-3">Create account</a>
                        <p class="small"><a href="#" class="text-reset">Have you forgotten your account details?</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}